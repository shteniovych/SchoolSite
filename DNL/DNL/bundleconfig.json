[
  // CSS Files
  // layout
  {
    "outputFileName": "wwwroot/css/bundles/layout.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/layout.css",
      "wwwroot/lib/bootstrap/css/bootstrap.min.css"
    ]
  },
  // home
  {
    "outputFileName": "wwwroot/css/bundles/home.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/home.index.css",
      "wwwroot/css/home.about.css",
      "wwwroot/css/home.contact.css",
      "wwwroot/css/treeview.css"
    ]
  },
  // Personal
  {
    "outputFileName": "wwwroot/css/bundles/personal.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/personal.administration.css"
    ]
  },
  // Account
  {
    "outputFileName": "wwwroot/css/bundles/account.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/login.css"
    ]
  },
  // News
  {
    "outputFileName": "wwwroot/css/bundles/news.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/news.allnews.css",
      "wwwroot/css/news.index.css"
    ]
  },
  // PhotoGallery
  {
    "outputFileName": "wwwroot/css/bundles/gallery.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/gallery.albums.css"
    ]
  },
  // JS Files
  // Layout
  {
    "outputFileName": "wwwroot/js/bundles/layout.min.js",
    "inputFiles": [
      "wwwroot/lib/jquery.js",
      "wwwroot/lib/bootstrap/js/bootstrap.min.js",
      "wwwroot/js/layout.js"
    ]
  },
  //Home
  {
    "outputFileName": "wwwroot/js/bundles/home.min.js",
    "inputFiles": [
      "wwwroot/js/home.index.js",
      "wwwroot/lib/metro/js/metro.min.js"
    ]
  },
  //News
  {
    "outputFileName": "wwwroot/js/bundles/news.min.js",
    "inputFiles": [
      "wwwroot/js/news.js"
    ]
  },
  //Gallery
  {
    "outputFileName": "wwwroot/js/bundles/gallery.min.js",
    "inputFiles": [
    ]
  }
]
