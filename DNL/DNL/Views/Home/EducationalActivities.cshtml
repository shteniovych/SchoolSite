@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/home.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/treeview.css" />
    </environment>
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="heading adaptive-heading">
                <h2>Виховна робота</h2>
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="container">
        <ul data-role="treeview">
            <li data-caption="Національно-патріотичне виховання">
                <ul>
                    <a href="#"><li data-caption="Заходи"></li></a>
                    <li><a asp-controller="Home" asp-action="NationalPatrioticEducation">Презентація</a></li>
                    <li><a asp-controller="PhotoGallery" asp-action="AllAlbums">Фотогалерея</a></li>
                </ul>
            </li>
            <li data-caption="Гурткова робота">
                <ul>
                    <li><a asp-controller="Home" asp-action="CirTimetable">Розклад роботи гуртків</a></li>
                    <a href="#"><li data-caption="Досягнення"></li></a>
                    <li><a asp-controller="PhotoGallery" asp-action="AllAlbums">Фотогалерея</a></li>
                </ul>
            </li>
            <li data-caption="Спортивні заходи">
                <ul>
                    <a href="#"><li data-caption="Календарний план спортивно-масових заходів"></li></a>
                    <li><a asp-controller="PhotoGallery" asp-action="AllAlbums">Фотогалерея</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="push"></div>
</div>

@section JsFiles {

    <environment include="Staging, Production">
        <script src="~/js/bundles/home.min.js" type="text/javascript"></script>
    </environment>

    <environment include="Development">
        <script src="~/lib/metro/js/metro.min.js" type="text/javascript"></script>
    </environment>
}