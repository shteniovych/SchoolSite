
@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/company-profile.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/home.index.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    </environment>
}

@model IEnumerable<NewsViewModel>


<!-- Слайдер -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/slider/school.jpg" alt="First slide">
            <div class="header-text hidden-xs">
                <div class="col-md-12 text-center">
                    <h1>Долинський науковий ліцей #1</h1>
                    <br>
                    <h3>Освіта - найвеличніше з усіх земних благ, але тільки тоді, коли вона найвищої якості. Інакше вона абсолютно<br> даремна.  © Редьярд Кіплінг</h3>
                    <a class="btn" id="about-us-button" href="about-us.html" role="button">Про нас</a>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/slider/slide2.jpg" alt="Second slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!-- Important links -->
<section id="important-links">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md">
                <center>
                    <a href="">
                        <img class="implnk-icon" src="~/images/menu/timetable.png">
                        <div class="important-links_title">Розклад</div>
                    </a>
                </center>
            </div>
            <div class="col-md">
                <center>
                    <a href="">
                        <img class="implnk-icon" src="~/images/menu/methodical_work.png">
                        <div class="important-links_title">Методична робота</div>
                    </a>
                </center>
            </div>
            <div class="col-md">
                <center>
                    <a href="vr.html">
                        <img class="implnk-icon" src="~/images/menu/educational_activities.png">
                        <div class="important-links_title">Виховна робота</div>
                    </a>
                </center>
            </div>
            <div class="col-md">
                <center>
                    <a href="#">
                        <img class="implnk-icon" src="~/images/menu/our_achievements.png">
                        <div class="important-links_title">Наші досягнення</div>
                    </a>
                </center>
            </div>
        </div>
    </div>
</section>

<!-- News -->
<div class="row">
    <div class="col-md-12">
        <div class="heading">
            <h2>Новини</h2>
        </div>
    </div>
</div>

<!-- News slider -->
<div id="news-carousel">
    <div class="container text-center my-3">
        <div class="row mx-auto my-auto">
            <div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
                <div class="carousel-inner w-100" role="listbox">
                    @*<div class="carousel-item active">
                        <div class="col-md-4">
                            <img class="d-block img-fluid" src="http://placehold.it/350x180?text=1">
                            <div class="date">10.10.10</div>
                            <h3>Af</h3>
                            <h5>Here must be more information. Lorem ipsum dolor sit aler</h5>
                        </div>
                    </div>*@
                    @{
                        foreach (var news in Model)
                        {
                            <div class="carousel-item" id="news-item">
                                <div class="col-md-4">
                                    <img class="d-block img-fluid" src="http://placehold.it/350x180?text=1">
                                    <div class="date">10.10.10</div>
                                    <h3>@news.Title</h3>
                                    <h5>Here must be more information. Lorem ipsum dolor sit aler</h5>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#recipeCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>


@section JsFiles {

    <script src="~/lib/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/home.index.js" type="text/javascript"></script>
}