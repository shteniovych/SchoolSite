@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/home.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/home.index.css" />
    </environment>
}

@model IEnumerable<NewsViewModel>

<!-- Слайдер -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/slider/school.jpg" alt="First slide">
            <div class="header-text row justify-content-center">
                <div class="col-md-9">
                    <center>
                        <h1>Долинський науковий ліцей #1</h1>
                        <h3>Освіта - найвеличніше з усіх земних благ, але тільки тоді, коли вона найвищої якості. Інакше вона абсолютно даремна.  © Редьярд Кіплінг</h3>
                        <a class="btn" id="about-us-button" asp-action="About" role="button">Про нас</a>
                    </center>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/slider/teachers.jpg" alt="Second slide">
            <div class="header-text row justify-content-center">
                <div class="col-md-9">
                    <center>
                        <h1>Долинський науковий ліцей #1</h1>
                        <h3>Бачити в кожній дитині особистість, творчу, обдаровану, цікаву – першорядне завдання Долинського наукового ліцею №1</h3>
                        <a class="btn" asp-action="About" id="about-us-button" role="button">Про нас</a>
                    </center>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!-- Important links -->
<section id="important-links">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-3 col-sm-3 col-6">
                <center>
                    <a asp-controller="Timetable" asp-action="Index">
                        <img class="implnk-icon" src="~/images/menu/timetable.png">
                        <div class="important-links_title">Розклад</div>
                    </a>
                </center>
            </div>
            <div class="col-md-3 col-sm-3 col-6">
                <center>
                    <a asp-controller="Home" asp-action="MethodicalWork">
                        <img class="implnk-icon" src="~/images/menu/methodical_work.png">
                        <div class="important-links_title">Методична робота</div>
                    </a>
                </center>
            </div>
            <div class="col-md-3 col-sm-3 col-6">
                <center>
                    <a asp-controller="Home" asp-action="EducationalActivities">
                        <img class="implnk-icon" src="~/images/menu/educational_activities.png">
                        <div class="important-links_title">Виховна робота</div>
                    </a>
                </center>
            </div>
            <div class="col-md-3 col-sm-3 col-6">
                <center>
                    <a asp-controller="Home" asp-action="Achievements">
                        <img class="implnk-icon" src="~/images/menu/our_achievements.png">
                        <div class="important-links_title">Наші досягнення</div>
                    </a>
                </center>
            </div>
        </div>
    </div>
</section>



<!-- News -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="heading">
                <h2>Новини</h2>
            </div>
        </div>
    </div>

</div>

<!-- News slider -->
<div id="news-carousel">

    <div class="container text-center my-3">
        <div class="row mx-auto my-auto">
            <div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#recipeCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#recipeCarousel" data-slide-to="1"></li>
                    <li data-target="#recipeCarousel" data-slide-to="2"></li>
                    <li data-target="#recipeCarousel" data-slide-to="3"></li>
                    <li data-target="#recipeCarousel" data-slide-to="4"></li>
                    <li data-target="#recipeCarousel" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner w-100" role="listbox">
                    @{
                        foreach (var item in Model)
                        {
                            var newsPhoto = "../images/Profile.jpg";
                            if (!string.IsNullOrEmpty(item.Photo))
                            {
                                newsPhoto = string.Format("data:image/gif;base64,{0}", item.Photo);
                            }
                            <div class="carousel-item" id="news-item" news-id="@item.Id">
                                <div class="col-md-4">
                                    <img class="d-block img-fluid" src="@newsPhoto">
                                    <div class="date">@item.DateOfPost.ToString("dd.MM.yyyy")</div>
                                    <h3>@item.Title</h3>
                                    <h5>@item.ShortDescription</h5>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#recipeCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-end">
        <div class="col-md-auto col-12">
            <a asp-controller="News" asp-action="AllNews" class="all-news-link">Всі новини</a>
        </div>
    </div>
</div>


@section JsFiles {

    <environment include="Staging, Production">
        <script src="~/js/bundles/home.min.js" type="text/javascript"></script>
    </environment>

    <environment include="Development">
        <script src="~/js/home.index.js" type="text/javascript"></script>
        <script src="~/lib/touch-swipe/jquery.touchSwipe.min.js"></script>
    </environment>
}
