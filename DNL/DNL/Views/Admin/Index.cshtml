@using Core.Entities

@model dynamic

<style>
    body {
        font-family: Arial;
    }

    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<h2 class="title text-center">Користувачі сайту</h2>

<div class="tab">
    <button class="tablinks" onclick="openCity(event, 'Teachers')">Вчителі</button>
    <button class="tablinks" onclick="openCity(event, 'Pupils')">Учні</button>
    <button class="tablinks" onclick="openCity(event, 'Parents')">Батьки</button>
    <button class="tablinks" onclick="openCity(event, 'Personals')">Персонал</button>
    <button class="tablinks" onclick="openCity(event, 'Admins')">Адміністратори</button>
</div>

<div id="Teachers" class="tabcontent">
    <a class="btn btn-primary bnt-add-new" asp-controller="Teacher" asp-action="Create">Створити нового вчителя</a>
    <table class="table table-sm table-bordered">
        <thead>
            <tr class="text-center">
                <th>
                    Ім'я
                </th>
                <th>
                    Прізвище
                </th>
                <th>
                    Електронна пошта
                </th>
                <th>
                    Кнопки управління
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser item in Model.Teachers)
            {

                <tr class="text-center">
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                            <button type="submit" class="btn btn-sm btn-danger">Видалити</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

