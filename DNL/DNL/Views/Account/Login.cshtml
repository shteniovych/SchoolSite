@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/account.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/login.css" />
    </environment>
}



@using BLL.ViewModels

@model LoginViewModel


<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-5 order-md-2 col-sm-12">
            <form class="form-horizontal" asp-action="Login" method="post">
                <span class="heading">Авторизація</span>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="E-mail" required />
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group help">
                    <input asp-for="Password" class="form-control" placeholder="Пароль" id="inputPassword" required />
                    <i class="fa fa-lock"></i>
                </div>
                <div class="form-group">
                    <div class="main-checkbox">
                        <input type="checkbox" value="none" id="checkbox1" name="check" />
                        <label for="checkbox1"></label>
                    </div>
                    <span class="text">Запам'ятати</span>
                    <button class="btn btn-primary" type="submit">Увійти</button>
                </div>
            </form>
        </div>

        <div class="col-md-7 order-md-1 col-sm-12">
            <center>
                <div class="welcome-title">Великі можливості!</div>
                <div class="welcome-text">Електронний журнал, Віртуальне навчальне середовище (ВНС) у твоєму кабінеті</div>
                <div class="foo">
                    <div class="bar">
                    <iframe width="100%" height="100%" src="https://www.youtube.com/embed/pn86d22-hw4?rel=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>


@section JsFiles {

    <environment include="Staging, Production">
    </environment>

    <environment include="Development">
    </environment>
}
