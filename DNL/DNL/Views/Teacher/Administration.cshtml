@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.index.css" />
    </environment>
}

@model IEnumerable<TeacherViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="heading adaptive-heading">
                <h2>Адміністрація</h2>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <h1>Директор ліцею</h1>
    @foreach (var item in Model)
    {
        if (item.AdminPosition == AdministrationPositionEnum.Director)
        {
            var teacherPhoto = string.Format("data:image/gif;base64,{0}", item.Photo);
            <div class="row">
                <div class="col-sm-4 col-6">
                    <center>
                        <img src="@teacherPhoto" class="teacher-photo">
                        <div class="name">@item.FirstName @item.LastName</div>
                        <div class="teacher-info">
                            <p style="margin:0px;">
                                Предмети:
                            </p>
                            <ul style="list-style:none;">
                                @foreach (var subject in item.Subjects)
                                {
                                    <li>@subject</li>
                                }
                            </ul>
                        </div>
                        <div class="teacher-info">@item.Category.GetDescription()</div>
                    </center>
                </div>
            </div>
        }
    }

    <h2>Заступники директора</h2>
    @foreach (var item in Model)
    {
        if (item.AdminPosition == AdministrationPositionEnum.Assistant)
        {
            var teacherPhoto = string.Format("data:image/gif;base64,{0}", item.Photo);
            <div class="row">
                <div class="col-sm-4 col-6">
                    <center>
                        <img src="@teacherPhoto" class="teacher-photo">
                        <div class="name">
                            <p>@item.FirstName @item.LastName</p>                         
                        </div>
                        <div class="teacher-info">
                            <p style="margin:0px;">
                                Предмети:
                            </p>
                            <ul style="list-style:none;">
                                @foreach (var subject in item.Subjects)
                                {
                                    <li>@subject</li>
                                }
                            </ul>
                        </div>
                        <div class="teacher-info">
                            <p>@item.Category.GetDescription()</p>
                        </div>
                    </center>
                </div>                
            </div>
        }
    }
</div>
