

@model IEnumerable<MethodicalAssociationViewModel>

<div class="container">
    <h2 class="title text-center">Методичні об'єднання</h2>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <a class="btn btn-primary bnt-add-new" asp-action="MethodicalAssociationCreate">Створити нове методичне об'єднання</a>
    <table class="table table-sm table-bordered">
        <thead>
            <tr class="text-center">
                <th>
                    Назва
                </th>
                <th>
                    Кнопки управління
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">Немає новин</td></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="MethodicalAssociationEdit" asp-route-id="@item.Id">Редагувати</a>
                                <button type="submit" class="btn btn-sm btn-danger">Видалити</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>