@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.allnews.css" />
    </environment>
}
@model IEnumerable<NewsViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="heading">
                <h2>Новини</h2>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row news">
        @{
            foreach (var item in Model)
            {
                var newsPhoto = string.Format("data:image/gif;base64,{0}", item.Photo);
                <div class="col-md-4 col-sm-6 col-12">
                    <center>
                        <a asp-controller="News" asp-action="NewsDetails" asp-route-newsId="@item.Id"><img src="@newsPhoto"></a>
                        <div class="news-date">@item.DateOfPost.ToString("MM.dd.yyyy")</div>
                        <a href="news_1.html"><div class="news-title">@item.Title</div></a>
                        <div>@item.ShortDescription</div>
                    </center>
                </div>
            }
        }
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>

@section JsFiles {

    <environment include="Staging, Production">
    </environment>

    <environment include="Development">
    </environment>
}
