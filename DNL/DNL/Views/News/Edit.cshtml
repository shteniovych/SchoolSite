@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.edit.create.css" />
        <link rel="stylesheet" href="~/lib/cropper/cropper.min.css">
    </environment>
}


@model NewsViewModel


<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <h2 class="title text-center title">Редагувати новину</h2>
    <form asp-action="Edit" method="post">
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Виберіть ділянку картинки</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="img-container">
                            <img id="image" src="">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Відмінити</button>
                        <button type="button" class="btn btn-primary" id="crop">Зберегти</button>
                    </div>
                </div>
            </div>
        </div>
        <input hidden id="PictureSource" asp-for="Photo" />
        <div class="form-group">
            <label asp-for="Title">Назва новини</label>
            <input asp-for="Title" class="form-control" placeholder="Назва">
        </div>

        <div class="form-group">
            <label asp-for="ShortDescription">Короткий опис новини</label>
            <input asp-for="ShortDescription" class="form-control" placeholder="Короткий опис">
        </div>
        <div hidden class="form-group">
            <label asp-for="DateOfPost">Короткий опис новини</label>
            <input pattern=".{30,55}" asp-for="DateOfPost" class="form-control" placeholder="Короткий опис">
        </div>
        <div class="form-group">
            <label asp-for="LongDescription">Довгий опис новини</label>
            <textarea asp-for="LongDescription" class="form-control" placeholder="Довгий опис"></textarea>
        </div>
        <div class="custom-file">
            <p>Фотографія( 17/9 e.g. 340x180)</p>
            <label class="custom-file-label" id="NameNewsPhoto" for="FileInput">Вибрати файл</label>
            <input type="file" class="custom-file-input" id="FileInput">
        </div>

        <button class="btn btn-primary" type="submit">Зберегти</button>
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </form>
</div>

@section JsFiles {

    <environment include="Staging, Production">
        <script src="~/js/bundles/news.min.js" type="text/javascript"></script>
    </environment>

    <environment include="Development">
        <script src="~/js/news.js" type="text/javascript"></script>
        <script src="~/js/news.js" type="text/javascript"></script>
    </environment>
}
