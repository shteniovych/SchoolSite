@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.edit.create.css" />
    </environment>
}


@model NewsViewModel

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <h2 class="title text-center title">Створити новину</h2>
    <form asp-action="Create" method="post">
        <input hidden id="PictureSource" asp-for="Photo" />
        <div class="form-group">
            <label asp-for="Title">Назва новини</label>
            <input asp-for="Title" class="form-control" placeholder="Назва">
        </div>

        <div class="form-group">
            <label asp-for="ShortDescription">Короткий опис новини</label>
            <input asp-for="ShortDescription" class="form-control" placeholder="Короткий опис">
        </div>
        <div class="form-group">
            <label asp-for="LongDescription">Довгий опис новини</label>
            <textarea asp-for="LongDescription" class="form-control" placeholder="Довгий опис"></textarea>
        </div>
        <div class="custom-file">
            <p>Фотографія( 17/9 e.g. 340x180)</p>
            <label class="custom-file-label" id="NameNewsPhoto" for="FileInput">Вибрати файл</label>
            <input type="file" class="custom-file-input" id="FileInput">
        </div>
        <button class="btn btn-primary" type="submit">Зберегти</button>
        <a class="btn btn-warning" asp-action="Index">Назад до списку</a>
    </form>
</div>

@section JsFiles {

    <environment include="Staging, Production">
        <script src="~/js/bundles/news.min.js" type="text/javascript"></script>
    </environment>

    <environment include="Development">
        <script src="~/js/news.js" type="text/javascript"></script>
    </environment>
}
