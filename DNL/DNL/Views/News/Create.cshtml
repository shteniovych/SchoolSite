@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.allnews.css" />
    </environment>
}


@model NewsViewModel
<div class="bg-primary m-1 p-1 text-center"><h4>Create Category</h4></div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <input hidden id="PictureSource" asp-for="Photo" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LongDescription"></label>
        <input asp-for="LongDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfPost"></label>
        <input asp-for="DateOfPost" class="form-control" />
    </div>
    <div class="form-group">
        <p>Image</p>
        <p></p>
        <div class="image-upload">
            <label for="FileInput">
                <span readonly id="NameEventPhoto">Path of the photo</span>
                <span class="uploat-photo-button">Upload</span>
            </label>
            <input hidden type="file" id="FileInput" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section JsFiles {

    <environment include="Staging, Production">
        <script src="~/js/home.index.js" type="text/javascript"></script>
    </environment>

    <environment include="Development">
        <script src="~/js/news.js" type="text/javascript"></script>
    </environment>
}
