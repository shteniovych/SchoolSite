@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/news.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/news.index.css" />
    </environment>
}

@model IEnumerable<NewsViewModel>

<div class="container">
    <h2>News</h2>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-sm table-bordered">

        @if (Model.Count() == 0)
        {
            <tr><td colspan="2" class="text-center">No Categories</td></tr>
        }
        else
        {
            foreach (NewsViewModel category in Model)
            {
                <tr>
                    <td>@category.Title</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>

    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>